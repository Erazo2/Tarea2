<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2.PagePrincipal">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingrese sus Datos" />
            <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre" Keyboard="Text" />
            <Entry x:Name="txtapellido" Placeholder="Ingrese sus Apellidos" Keyboard="Text" />
            <Entry x:Name="txtEdad" Placeholder="Ingrese su Edad" Keyboard="Text" />
            <Entry x:Name="txtCorreo" Placeholder="Ingrese su Correo" Keyboard="Text" />
            <Button x:Name="BtnInformacion" Clicked="BtnInformacion_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>